@model IEnumerable<WebApp_Sport.Models.Sport>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-image: url('slika/honda.png');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        background-attachment: fixed;
    }
</style>

<h1>Sport</h1>

<p>
    <a asp-action="Create">Dodaj novi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdSport">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdSport">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdSport">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
